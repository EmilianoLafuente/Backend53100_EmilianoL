{{#if isValid}}
<h1>Listado de productos</h1>
<hr>
<div>
    {{#each docs}}
        <div class="producto" >
            <div class="datos-producto">
                <p><strong>Producto:</strong> {{this.title}} &nbsp; <strong>Código:</strong> {{this.code}}</p>
                <p><strong>Descripción:</strong> {{this.description}} &nbsp; <strong>Precio:</strong> {{this.price}}</p>
                <p><strong>Categoría:</strong> {{this.category}} &nbsp; <strong>Estado:</strong> {{this.status}} &nbsp; <strong>Stock:</strong> {{this.stock}}</p>
            </div>
            {{!-- <div>
                <button>Modificar</button>
            </div> --}}
            <div class="imagen-producto">
                <img src={{this.thumbnails}} alt={{this.title}}>
            </div>
        </div>

        
    <br/>
    {{/each}}
</div>
<br/>
<hr>
<div class="pages">
    {{#if hasPrevPage}}
        <a href={{this.prevLink}}><< Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
     {{#if hasNextPage}}
        <a href={{this.nextLink}}>Siguiente >></a>
    {{/if}} 
</div>
{{else}}
<h2>No hay estudiantes para mostrar</h2>
{{/if}}
